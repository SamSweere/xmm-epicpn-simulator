Bootstrap: library
From: ubuntu:22.04

%post
    export DEBIAN_FRONTEND=noninteractive

    apt-get update
    apt-get upgrade -y
    apt-get dist-upgrade -y
    apt-get install software-properties-common -y
    add-apt-repository ppa:ubuntu-toolchain-r/test
    apt-get update
    apt-get upgrade -y
    apt-get dist-upgrade -y
    apt-get install -y --no-install-recommends build-essential curl gcc g++ gfortran libcurl4 libcurl4-gnutls-dev \
        libncurses5-dev libreadline6-dev \
        libcmocka-dev libexpat1-dev libgsl0-dev libfile-which-perl \
        libdevel-checklib-perl make ncurses-dev perl perl-modules xorg-dev \
        autoconf libboost-dev libtool libcgal-dev cmake automake \
        nano vim wget
    apt-get clean
    rm -rf /var/lib/apt/lists/* /var/cache/apt/*
